{
  "rules": {
    "gameSecrets": {
      ".read": false,
      ".write": false
    },
    "games": {
      "$gameId": {
        ".read": "auth != null && (root.child('games/'+$gameId+'/player1/id').val() === auth.uid || root.child('games/'+$gameId+'/player2/id').val() === auth.uid)",
        ".write": false
      }
    },
    "matchmaking": {
      ".read": "auth != null",
      ".write": false
    },
    "playerNotifications": {
      "$playerId": {
        ".read": "auth != null && auth.uid === $playerId",
        ".write": false
      }
    },
    "leagues": {
      ".read": "auth != null",
      ".write": false
    },
    "leagueMembers": {
      ".read": "auth != null",
      ".write": false
    },
    "playerLeagues": {
      "$playerId": {
        ".read": "auth != null && auth.uid === $playerId"
      },
      ".write": false
    },
    "leagueCodes": {
      ".read": false,
      ".write": false
    },
    "leagueMatches": {
      ".read": "auth != null",
      ".write": false,
      "$leagueId": {
        ".indexOn": ["timestamp"]
      }
    },
    "challenges": {
      ".read": "auth != null",
      ".write": false
    },
    "playerChallenges": {
      "$playerId": {
        ".read": "auth != null && auth.uid === $playerId"
      },
      ".write": false
    }
  }
}
